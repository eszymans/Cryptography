<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15" style="-fx-background-color: #f4f4f4; -fx-padding: 15;"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="pl.comp.SchnorrFormController">

    <TitledPane text="Parametry publiczne (p, q, h)" collapsible="false" style="-fx-font-weight: bold; -fx-background-color: #e3f2fd;">
        <VBox spacing="10">
            <HBox spacing="10">
                <Label text="p:" style="-fx-font-weight: bold; -fx-text-fill: #1565c0;"/>
                <TextField fx:id="fieldP" promptText="Liczba pierwsza p" style="-fx-background-color: #ffffff; -fx-border-color: #90caf9;"/>
            </HBox>
            <HBox spacing="10">
                <Label text="q:" style="-fx-font-weight: bold; -fx-text-fill: #1565c0;"/>
                <TextField fx:id="fieldQ" promptText="Liczba pierwsza q" style="-fx-background-color: #ffffff; -fx-border-color: #90caf9;"/>
            </HBox>
            <HBox spacing="10">
                <Label text="h:" style="-fx-font-weight: bold; -fx-text-fill: #1565c0;"/>
                <TextField fx:id="fieldH" promptText="Generator h" style="-fx-background-color: #ffffff; -fx-border-color: #90caf9;"/>
            </HBox>
            <Button fx:id="btnGenerateParams" onAction="#generateParams" text="Wygeneruj p, q, h" style="-fx-background-color: #42a5f5; -fx-text-fill: white;"/>
        </VBox>
    </TitledPane>

    <TitledPane text="Klucze" collapsible="false" style="-fx-font-weight: bold; -fx-background-color: #e3f2fd;">
        <VBox spacing="10">
            <HBox spacing="10">
                <Label text="Klucz prywatny a:" style="-fx-font-weight: bold; -fx-text-fill: #1565c0;"/>
                <TextField fx:id="fieldPrivateKey" promptText="Podaj lub wylosuj a" style="-fx-background-color: #ffffff; -fx-border-color: #90caf9;"/>
                <Button text="Wylosuj" onAction="#generatePrivateKey" style="-fx-background-color: #42a5f5; -fx-text-fill: white;"/>
            </HBox>
            <HBox spacing="10">
                <Label text="Klucz publiczny v:" style="-fx-font-weight: bold; -fx-text-fill: #1565c0;"/>
                <TextField fx:id="fieldPublicKey" editable="false" style="-fx-background-color: #ffffff; -fx-border-color: #90caf9;"/>
            </HBox>
            <Button text="Generuj klucz publiczny" onAction="#generatePublicKey" style="-fx-background-color: #42a5f5; -fx-text-fill: white;"/>
        </VBox>
    </TitledPane>

    <TitledPane text="Podpisywanie dokumentu" collapsible="false" style="-fx-font-weight: bold; -fx-background-color: #e3f2fd;">
        <VBox spacing="10">
            <TextArea fx:id="fieldMessage" promptText="Wprowadź wiadomość do podpisania" prefRowCount="3" style="-fx-background-color: #ffffff; -fx-border-color: #90caf9;"/>
            <Button text="Wczytaj plik" onAction="#loadAnyFile" style="-fx-background-color: #42a5f5; -fx-text-fill: white;"/>
            <Button text="Podpisz" onAction="#signMessage" style="-fx-background-color: #66bb6a; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Button text="Zapisz podpis do pliku" onAction="#saveSignatureToFile" style="-fx-background-color: #ab47bc; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </VBox>
    </TitledPane>

    <TitledPane text="Weryfikacja podpisu" collapsible="false" style="-fx-font-weight: bold; -fx-background-color: #e3f2fd;">
        <VBox spacing="10">
            <TextArea fx:id="fieldVerifyMessage" promptText="Wiadomość do weryfikacji" prefRowCount="3" style="-fx-background-color: #ffffff; -fx-border-color: #90caf9;"/>
            <Button text="Weryfikuj podpis" onAction="#verifySignature" style="-fx-background-color: #ff7043; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Label fx:id="labelVerificationResult" style="-fx-text-fill: #1565c0;"/>
        </VBox>
    </TitledPane>

</VBox>
